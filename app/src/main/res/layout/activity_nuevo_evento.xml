<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.orion.agendapp.NuevoEvento">

        <TextView
            android:text="Nuevo Evento"
            android:textSize="20dp"
            android:textColor="#68976a"
            android:textStyle="bold|italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/etNewEvent"
        android:hint="Nombre Evento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TableRow>
    <Button
        android:id="@+id/btnDate"
        android:text="Fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etDate"
        android:hint="Fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </TableRow>
    <TableRow>
    <Button
        android:id="@+id/btnTime"
        android:text="Hora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etTime"
        android:hint="Hora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </TableRow>

    <EditText
        android:id="@+id/etDescrip"
        android:hint="Descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Contacto"
        android:textSize="20dp"
        android:textColor="#68976a"
        android:textStyle="bold|italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>
    <TableRow>
    <Button
        android:id="@+id/btnAddContact"
        android:text="Agregar Contacto"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </TableRow>
    <EditText
        android:id="@+id/etContact"
        android:hint="Nombre del Contacto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/etTelContact"
        android:hint="Telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
   <!--- <EditText
        android:id="@+id/etEmail"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />-->
    <Button
        android:id="@+id/btnAddEvent"
        android:text="Crear evento"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</TableLayout>
